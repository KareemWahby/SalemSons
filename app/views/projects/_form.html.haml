= simple_form_for @project, html: { multipart: true } do |f|
  - if @project.errors.any?
    #errors
      %h2
        = pluralize(@project.errors.count, "error")
        prevented this Picture from saving
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :image, input_html: { class: 'form-control' }
  .form-group
    = f.input :customer, input_html: { class: 'form-control' }
  .form-group
    = f.input :location, input_html: { class: 'form-control' }
  .form-group
    = f.input :valueOfContract, input_html: { class: 'form-control' }
  .form-group
    = f.input :duration, input_html: { class: 'form-control' }
  .form-group
    = f.input :scope, input_html: { class: 'form-control' }

  = f.button :submit, class: "btn btn-primary"