#project_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.project_image
        = image_tag @project.image_url.to_s
        .panel-body
          %p="Customer: "+ @project.customer
          %p="Location: "+@project.location
          %p="Value of contract: "+@project.valueOfContract
          %p="Duration: "+@project.duration
          %p="Project Scope: "+@project.scope
        .panel-footer
          .row
            .col-md-6
              .btn-group.pull-right
                =link_to "Back" , '/projects',class: "btn btn-default"
                - if admin_signed_in?
                  =link_to "Edit" , edit_project_path,class: "btn btn-default"
                  =link_to "Delete",project_path,method: :delete , data: {confirm: "Are you sure?"},class: "btn btn-default"